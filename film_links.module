function _film_link_role_autocomplete($string) {
  $matches = array();
//  watchdog('_film_link_role_autocomplete',$string);
  // Some fantasy DB table which holds cities
  $query = db_select('taxonomy_term_data', 'r');
 
  // Select rows that match the string

  $query->fields('r', array('name','tid'));
  $query->condition('r.name', '%' . db_like($string) . '%', 'LIKE');
  $query->condition('r.vid',27); // ** SB ** Need to replace this ID with the right one.  $query->orderBy('r.name');
  $role_id = _film_links_get_character_role_id();
  $query->condition('r.tid',array(273), 'NOT IN');
  $query->range(0, 18);
  $return = $query->execute();
 
  // add matches to $matches  
  foreach ($return as $row) {
    $matches[$row->name] = check_plain($row->name);
  }
 
  // return for JS
  drupal_json_output($matches);
}

