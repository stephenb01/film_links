// Need to rewrite this so I look up roles 
// $type - this is the type the role is associated to.
// THis can be film , people or organisation. Film and people will use the same taxonomy term
function film_links_get_role_details($rid = NULL, $type = NULL, $role_name = NULL) {
  
  // ** SB ** Need to get the correct tax vocab from the system
  $vid = _film_links_get_vid($type);
  $query = db_select('taxonomy_term_data','r');
  if(!empty($role_name)) {
    $query->condition('r.name',$role_name,'=');
  }
  
  if(!empty($rid)) {  
    $query->condition('r.tid',$rid,'=');
  }

  $query->condition('r.vid',$vid,'=');

  $query->leftJoin('film_role_character','t','t.trid = r.tid');  //
  $query->fields('r', array('tid','name'));
  $query->fields('t', array('trid'));
  
  $result = $query->execute();
  
  $role = array();
  
  foreach($result as $row) {
    $role['name'] = $row->name;
    $role['rid'] = $row->tid;
    $role['film_character'] = isset($row->trid);
  } 
  return $role;
}

