  $query->condition('l.nid1',$node_id,'=');
  $query->condition('l.nid2',$link_id,'=');
  $query->condition('l.trid',$role_id,'=');
  $query->condition('l.srid',$sub_role_id,'=');
  $query->condition('r.pid',NULL,'=');
  $query->fields('l',array('nid','film_character'));
  
  $result = $query->execute(); //->fetchAllAssoc();
  
  $item_found = FALSE;
  foreach($result as $row) {
    $item_found = TRUE;
  }
  
  return $item_found;
}

