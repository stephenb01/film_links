function film_links_add($node_id,$link_id,$role_id,$character = NULL) {

  $query = db_insert('film_links');
  $query->fields(
    array (
      'nid1' => $node_id,
      'nid2' => $link_id,
      'trid' => $role_id,
      'film_character' => $character,
    )
  );
  
  try {
    $query->execute();
  } catch (Exception $e) {
    drupal_set_message(t('An error occurred inserting a help item. Check the log files for more information'),'error');
    watchdog('film_link','Error inserting item : ' . $e,NULL,WATCHDOG_ERROR);      
    return FALSE;
  }  
  return TRUE;
}

