function film_links_role_save($role_name,$type,$character = 0) {
  //
  $vid = _film_links_get_vid($type);
  $term = new stdClass();
  $term->name = $role_name;
  $term->vid = $vid;
  taxonomy_term_save($term);
  return $term->tid;       
}
 
function _film_links_get_vid($type) {
  $vid = '';
  switch ($type) {
