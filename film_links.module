function film_links_get_links($node, $role = NULL, $role_exclude = NULL, $params) {
  // Need to pass just hte ID of the node from there I can detect the type and hence the output of the node.
  // There is no need for me to pass two nodes as they will never appear at the same time.
  // 
  //$params['show_edit'];
  //$params['show_role'];
  //$params['type']  // People / Organisation / film
  $query = db_select('film_links','l');

  $db_or = db_or();
  $db_or->condition('l.nid1',$node->nid);
  $db_or->condition('l.nid2',$node->nid);
  $query->condition($db_or);

  if (!empty($role)) {
    $query->condition('l.trid',$role,'IN');
  }
  
  if (!empty($role_exclude)) {
    $query->condition('l.trid',$role_exclude,'NOT IN');
  }
  
  $query->leftJoin('node','n1','n1.nid = l.nid1'); // 
  $query->leftJoin('node','n2','n2.nid = l.nid2');  //

  $query->innerJoin('taxonomy_term_data','r','r.tid = l.trid'); // Role
  
  $query->addField('l', 'lid','link_id');
  $query->addField('l', 'nid1','nid1');
  $query->addField('l', 'nid2','nid2');
  $query->addField('l', 'trid','role_id');
  $query->addField('l', 'film_character','film_character');
  
  $query->addField('n1', 'title', 'n1_title');
  $query->addField('n1', 'type', 'n1_type');
  $query->addField('n1', 'nid', 'n1_nid');
  $query->addField('n2', 'title', 'n2_title');
  $query->addField('n2', 'type', 'n2_type');
  $query->addField('n2', 'nid', 'n2_nid');
  
